# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.{js,json,coffee,css,sass,scss,less,html,yml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Tab indentation (no size specified)
[*.md]
indent_style = tab
trim_trailing_whitespace = false
